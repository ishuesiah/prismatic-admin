// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  picture       String?
  googleId      String?   @unique
  role          UserRole  @default(VIEWER)
  status        UserStatus @default(ACTIVE)
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLogin     DateTime?
  emailVerified DateTime?
  image         String?
  
  // Relations
  accounts      Account[]
  invitations   Invitation[] @relation("InvitedBy")
  blogPosts     BlogPost[]
  mindMaps      MindMap[]
  auditLogs     AuditLog[]
  apiCredentials ApiCredential[]
  onboardingProgress OnboardingProgress[]
  sessions      Session[]
  emailCorrespondences EmailCorrespondence[]
  emailGroups   EmailGroup[]
  responseTemplates ResponseTemplate[]
  responseRules ResponseRule[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

model Invitation {
  id         String   @id @default(cuid())
  email      String
  token      String   @unique
  invitedBy  String
  status     InvitationStatus @default(PENDING)
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  acceptedAt DateTime?
  
  // Relations
  inviter    User     @relation("InvitedBy", fields: [invitedBy], references: [id])
  
  @@index([email])
  @@index([token])
}

model ApiCredential {
  id                String   @id @default(cuid())
  service           String
  userId            String
  encryptedCredentials String @db.Text
  status            CredentialStatus @default(ACTIVE)
  lastHealthCheck   DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  // Relations
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([service, userId])
  @@index([userId])
}

model BlogPost {
  id               String   @id @default(cuid())
  userId           String
  title            String
  slug             String   @unique
  content          Json
  excerpt          String?
  featuredImage    String?
  seo              Json?
  status           PostStatus @default(DRAFT)
  publishedAt      DateTime?
  shopifyArticleId String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  // Relations
  author           User     @relation(fields: [userId], references: [id])
  
  @@index([userId])
  @@index([slug])
  @@index([status])
}

model MindMap {
  id            String   @id @default(cuid())
  userId        String
  title         String
  description   String?
  nodes         Json
  edges         Json
  isPublic      Boolean  @default(false)
  collaborators String[] @default([])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relations
  owner         User     @relation(fields: [userId], references: [id])
  
  @@index([userId])
}

model OnboardingWorkflow {
  id          String   @id @default(cuid())
  name        String
  description String?
  steps       Json
  userType    UserRole
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  progress    OnboardingProgress[]
  
  @@index([userType])
}

model OnboardingProgress {
  id            String   @id @default(cuid())
  userId        String
  workflowId    String
  currentStep   Int      @default(0)
  completedSteps String[] @default([])
  startedAt     DateTime @default(now())
  completedAt   DateTime?
  
  // Relations
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  workflow      OnboardingWorkflow @relation(fields: [workflowId], references: [id])
  
  @@unique([userId, workflowId])
  @@index([userId])
}

model AuditLog {
  id           String   @id @default(cuid())
  userId       String
  action       String
  resourceType String
  resourceId   String?
  details      Json?
  ipAddress    String?
  userAgent    String?
  createdAt    DateTime @default(now())
  
  // Relations
  user         User     @relation(fields: [userId], references: [id])
  
  @@index([userId])
  @@index([resourceType])
  @@index([createdAt])
}

// Enums
enum UserRole {
  SUPERADMIN
  ADMIN
  STAFF
  VIEWER
}

enum UserStatus {
  ACTIVE
  INACTIVE
  INVITED
  SUSPENDED
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
}

enum CredentialStatus {
  ACTIVE
  INACTIVE
  ERROR
}

enum PostStatus {
  DRAFT
  SCHEDULED
  PUBLISHED
}

// Email Responder Models
model EmailCorrespondence {
  id               String    @id @default(cuid())
  ticketId         String    @unique
  conversationId   String
  conversationUrl  String?
  subject          String
  fromEmail        String
  fromName         String?
  messageText      String    @db.Text
  labels           String[]
  inbox            String?
  creationDate     DateTime
  closedDate       DateTime?
  assignee         String?
  
  // Grouping & Response
  groupId          String?
  autoResponse     String?   @db.Text
  isEdited         Boolean   @default(false)
  needsAction      Boolean   @default(true)
  
  // Extracted data
  orderNumber      String?
  shopifyData      Json?
  shipstationData  Json?
  
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  userId           String
  
  // Relations
  user             User      @relation(fields: [userId], references: [id])
  group            EmailGroup? @relation(fields: [groupId], references: [id])
  
  @@index([fromEmail])
  @@index([groupId])
  @@index([userId])
}

model EmailGroup {
  id            String   @id @default(cuid())
  name          String
  description   String?
  type          GroupType
  isExpanded    Boolean  @default(false)
  priority      Int      @default(0)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  userId        String
  
  // Relations
  user          User     @relation(fields: [userId], references: [id])
  emails        EmailCorrespondence[]
  
  @@index([userId])
}

model ResponseTemplate {
  id            String   @id @default(cuid())
  name          String
  instructions  String   @db.Text
  isDefault     Boolean  @default(false)
  userId        String
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user          User     @relation(fields: [userId], references: [id])
  
  @@index([userId])
}

model ResponseRule {
  id            String   @id @default(cuid())
  trigger       String   // keyword, product, order_status
  condition     String   // The condition to match
  response      String   @db.Text
  priority      Int      @default(0)
  isActive      Boolean  @default(true)
  userId        String
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user          User     @relation(fields: [userId], references: [id])
  
  @@index([userId])
}

enum GroupType {
  PRIORITY      // Damaged items, wrong items
  ORDER_STATUS  // Order inquiries
  WHOLESALE     // Wholesale inquiries
  NO_ACTION     // Messages that don't need response
  OTHER
}
